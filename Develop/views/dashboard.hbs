{{#if logged_in}}
    {{#if posts.length}}
        <h2>Latest Blog Posts</h2>
        <ul>
            {{#each posts}}
                <li>
                    <h2>{{author}}</h2>
                    <h3>{{title}}</h3>
                    <p>{{content}}</p>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No blog posts available, but you are logged in.</p>
    {{/if}}
{{else}}
    <p>You are not logged in!</p>
{{/if}}